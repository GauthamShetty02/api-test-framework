{
  "name": "api-test-framework",
  "version": "1.0.0",
  "description": "API Testing Framework using Playwright",
  "scripts": {
    "test": "npx playwright test",
    "test:allure": "npx playwright test --reporter=allure-playwright",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:serve": "npx allure serve allure-results"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.9.0",
    "allure-commandline": "^2.24.0",
    "playwright-test-framework-advanced": "^1.0.0"
  }
}