{
  "name": "playwright-test-framework-advanced",
  "version": "1.0.0",
  "description": "A comprehensive Playwright testing framework with logging and reporting",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "allure serve allure-results",
    "clean": "rm -rf allure-results test-results"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "framework",
    "allure",
    "winston"
  ],
  "author": "Gautham Shetty",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "winston": "^3.11.0",
    "allure-playwright": "^2.10.0"
  },

  "peerDependencies": {
    "@playwright/test": ">=1.30.0"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gauthamshetty/playwright-test-framework.git"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}